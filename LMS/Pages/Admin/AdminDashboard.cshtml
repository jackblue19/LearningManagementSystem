@page
@model LMS.Pages.Admin.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
            <h1 class="mb-1">Admin Overview</h1>
            <p class="text-muted mb-0">Quick insight into users, classes, feedback, and system activities.</p>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <a asp-page="/Admin/Users/Index" class="btn btn-primary">Manage Users</a>
            <a asp-page="/Admin/Feedbacks/Index" class="btn btn-outline-secondary">Feedback Inbox</a>
            <a asp-page="/Admin/AuditLogs/Index" class="btn btn-outline-secondary">Audit Trail</a>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <p class="text-muted text-uppercase fw-semibold mb-2">Users</p>
                    <h3 class="fw-bold">@Model.Dashboard.TotalUsers</h3>
                    <div class="d-flex justify-content-between text-muted small">
                        <span>Active: @Model.Dashboard.ActiveUsers</span>
                        <span>Pending: @Model.Dashboard.PendingUsers</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <p class="text-muted text-uppercase fw-semibold mb-2">Classes</p>
                    <h3 class="fw-bold">@Model.Dashboard.TotalClasses</h3>
                    <div class="text-muted small">Active / upcoming: @Model.Dashboard.ActiveClasses</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <p class="text-muted text-uppercase fw-semibold mb-2">Feedback</p>
                    <h3 class="fw-bold">@Model.Dashboard.TotalFeedbacks</h3>
                    <div class="text-muted small">Pending: @Model.Dashboard.PendingFeedbacks | Hidden: @Model.Dashboard.HiddenFeedbacks</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <p class="text-muted text-uppercase fw-semibold mb-2">Audit Logs</p>
                    <h3 class="fw-bold">@Model.Dashboard.TotalAuditLogs</h3>
                    <div class="text-muted small">24h: @Model.Dashboard.RecentAuditLogs.Count()</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-1">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Latest Feedback</h5>
                        <a asp-page="/Admin/Feedbacks/Index" class="btn btn-sm btn-outline-primary">View all</a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Dashboard.RecentFeedbacks.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var fb in Model.Dashboard.RecentFeedbacks)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <div class="fw-semibold">@fb.Username <small class="text-muted">@fb.FullName</small></div>
                                            <div class="text-muted small">Class: @fb.ClassName · Rated: @(fb.Rating?.ToString() ?? "-")</div>
                                            <div class="mt-1 text-truncate" style="max-width: 450px;">@(fb.Content ?? "(no content)")</div>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-info">@fb.FbStatus ?? "unknown"</span>
                                            <div class="text-muted small">@fb.CreatedAt.ToString("MMM dd, yyyy")</div>
                                            <div>
                                                @if (fb.IsVisible)
                                                {
                                                    <span class="badge bg-success">Visible</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Hidden</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No recent feedback.</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Recent Audit Activity</h5>
                        <a asp-page="/Admin/AuditLogs/Index" class="btn btn-sm btn-outline-primary">View logs</a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Dashboard.RecentAuditLogs.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var log in Model.Dashboard.RecentAuditLogs)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <div class="fw-semibold">@log.Username <small class="text-muted">@log.FullName</small></div>
                                            <div class="text-muted small">@log.ActionType · @log.EntityName (#@log.RecordId)</div>
                                        </div>
                                        <div class="text-muted small">@log.CreatedAt.ToString("MMM dd, HH:mm")</div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No audit activity captured yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white border-0">
            <h5 class="mb-0">Quick Links</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3 col-sm-6">
                    <a asp-page="/Admin/Users/Index" class="btn btn-outline-dark w-100">User Management</a>
                </div>
                <div class="col-md-3 col-sm-6">
                    <a asp-page="/Admin/Feedbacks/Index" class="btn btn-outline-dark w-100">Feedback Moderation</a>
                </div>
                <div class="col-md-3 col-sm-6">
                    <a asp-page="/Admin/AuditLogs/Index" class="btn btn-outline-dark w-100">Audit Logs</a>
                </div>
                <div class="col-md-3 col-sm-6">
                    <a asp-page="/Manager/ManagerDashboard" class="btn btn-outline-dark w-100">Manager View</a>
                </div>
            </div>
        </div>
    </div>
</div>
