@page
@model LMS.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>
        <a asp-page="Create" class="btn btn-primary">Create New User</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Form -->
    <form method="get" class="mb-4">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="SearchTerm" class="form-label">Search</label>
                <input type="text" class="form-control" id="SearchTerm" name="SearchTerm" 
                       value="@Model.SearchTerm" placeholder="Username, Email, or Name">
            </div>
            <div class="col-md-3">
                <label for="RoleFilter" class="form-label">Role</label>
                <select class="form-select" id="RoleFilter" name="RoleFilter">
                    <option value="">All Roles</option>
                    @foreach (var role in Model.ViewModel.AvailableRoles)
                    {
                        <option value="@role" selected="@(Model.RoleFilter == role)">@role</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="IsActiveFilter" class="form-label">Status</label>
                <select class="form-select" id="IsActiveFilter" name="IsActiveFilter">
                    <option value="">All</option>
                    <option value="true" selected="@(Model.IsActiveFilter == true)">Active</option>
                    <option value="false" selected="@(Model.IsActiveFilter == false)">Inactive</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-secondary w-100">Filter</button>
            </div>
        </div>
    </form>

    <!-- Users Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Role</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ViewModel.Users.Items.Any())
                {
                    @foreach (var user in Model.ViewModel.Users.Items)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@(user.FullName ?? "-")</td>
                            <td>
                                <span class="badge bg-info">@(user.RoleDesc ?? "-")</span>
                            </td>
                            <td>@(user.Phone ?? "-")</td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form method="post" asp-page-handler="ToggleActive" asp-route-id="@user.UserId" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-warning">
                                            @(user.IsActive ? "Deactivate" : "Activate")
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@user.UserId" 
                                          class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">No users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (Model.ViewModel.Users.TotalCount > 0)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.ViewModel.Users.PageIndex > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="Index" 
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-RoleFilter="@Model.RoleFilter"
                           asp-route-IsActiveFilter="@Model.IsActiveFilter"
                           asp-route-PageIndex="@(Model.ViewModel.Users.PageIndex - 1)">Previous</a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.ViewModel.Users.PageIndex - 2); 
                     i <= Math.Min((Model.ViewModel.Users.TotalCount + Model.ViewModel.Users.PageSize - 1) / Model.ViewModel.Users.PageSize, 
                                   Model.ViewModel.Users.PageIndex + 2); i++)
                {
                    <li class="page-item @(i == Model.ViewModel.Users.PageIndex ? "active" : "")">
                        <a class="page-link" asp-page="Index"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-RoleFilter="@Model.RoleFilter"
                           asp-route-IsActiveFilter="@Model.IsActiveFilter"
                           asp-route-PageIndex="@i">@i</a>
                    </li>
                }

                @if (Model.ViewModel.Users.PageIndex < (Model.ViewModel.Users.TotalCount + Model.ViewModel.Users.PageSize - 1) / Model.ViewModel.Users.PageSize)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="Index"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-RoleFilter="@Model.RoleFilter"
                           asp-route-IsActiveFilter="@Model.IsActiveFilter"
                           asp-route-PageIndex="@(Model.ViewModel.Users.PageIndex + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

