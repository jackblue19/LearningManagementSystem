@page
@model LMS.Pages.Centers.IndexModel
@{
    ViewData["Title"] = "Trung tâm";
}
<div class="row g-3">
    @foreach ( var c in Model.Centers )
    {
        <div class="col-md-4">
            <div class="card card-hover h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@c.CenterName</h5>
                    <div class="text-muted small mb-2">@c.CenterAddress</div>
                    <div class="mt-auto">
                        <a class="btn btn-primary" asp-page="Details" asp-route-id="@c.CenterId">Xem lớp</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
