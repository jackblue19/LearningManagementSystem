@page
@model LMS.Pages.Common.ScheduleModel
@{
    ViewData["Title"] = "Th·ªùi kh√≥a bi·ªÉu tu·∫ßn";
}

<style>
    .schedule-grid {
        display: grid;
        grid-template-columns: 160px repeat(7, 1fr);
        gap: 8px;
    }

    .time-col-header,
    .day-header {
        padding: 12px;
        background: #f9f2ff;
        border-radius: 10px;
        text-align: center;
        font-weight: 600;
    }

    .time-col {
        background: #fafafa;
        border-radius: 10px;
        padding: 10px;
        text-align: center;
        border: 1px solid #eee;
    }

    .slot-time {
        font-size: 13px;
        color: #777;
    }

    .empty-cell {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 12px;
        height: 90px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #bbb;
    }

    .class-card {
        border: 1px solid #e5d4ff;
        background: #f7f0ff;
        border-radius: 12px;
        padding: 10px;
        height: 90px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .class-title {
        font-weight: 600;
        color: #6a3dcc;
    }

    .class-room,
    .class-teacher {
        font-size: 13px;
        color: #6b6b6b;
    }

    .schedule-footer {
        margin-top: 15px;
        font-weight: 600;
        color: #6a3dcc;
    }
</style>

<section class="container py-4">

    <h2 class="mb-3"><i class="bi bi-calendar-week"></i> Th·ªùi kh√≥a bi·ªÉu tu·∫ßn</h2>

    <!-- FILTER FORM -->
    <form method="post" class="card shadow-sm mb-4">
        <div class="card-body row g-3">
            <div class="col-md-4">
                <label asp-for="StudentId" class="form-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" class="form-control" />
            </div>
        </div>
        <div class="card-footer d-flex">
            <button type="submit" class="btn btn-primary">T·∫£i th·ªùi kh√≥a bi·ªÉu</button>
        </div>
    </form>

    <!-- WEEK GRID -->
    <div class="schedule-grid">

        <!-- Header Row -->
        <div class="time-col-header">üïí Gi·ªù h·ªçc</div>
        @foreach (var day in Model.DaysOfWeek)
        {
            <div class="day-header">@day</div>
        }

        <!-- Time Slots -->
        @for (int slot = 1; slot <= 6; slot++)
        {
            <!-- Slot Label -->
            <div class="time-col">
                <strong>Slot @slot</strong>
                <div class="slot-time">@Model.GetSlotTime(slot)</div>
            </div>

            <!-- 7 Day Columns -->
            @for (int weekday = 1; weekday <= 7; weekday++)
            {
                var item = Model.GetClassForSlot(weekday, slot);

                if (item != null)
                {
                    <div class="class-card">
                        <div class="class-title">@item.ClassName</div>
                        <div class="class-room">@item.RoomName</div>
                        <div class="class-teacher">@item.TeacherName</div>
                    </div>
                }
                else
                {
                    <div class="empty-cell">-</div>
                }
            }
        }
    </div>

    <!-- FOOTER -->
    <div class="schedule-footer">
        <i class="bi bi-calendar-check"></i>
        T·ªïng: @Model.TotalSessions bu·ªïi h·ªçc/tu·∫ßn
    </div>

</section>

