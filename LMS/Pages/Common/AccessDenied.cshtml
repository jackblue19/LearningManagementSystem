@page
@model LMS.Pages.Common.AccessDeniedModel
@{
    ViewData["Title"] = "Truy cập bị từ chối";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .error-container {
            text-align: center;
            color: white;
        }
        .error-code {
            font-size: 120px;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .btn-home {
            background: white;
            color: #667eea;
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <i class="bi bi-shield-lock-fill" style="font-size: 100px;"></i>
        <div class="error-code">403</div>
        <h1>Truy cập bị từ chối</h1>
        <p class="lead">Bạn không có quyền truy cập vào trang này.</p>
        <a href="/" class="btn btn-home">
            <i class="bi bi-house-fill me-2"></i>
            Về trang chủ
        </a>
        <a asp-page="/Common/Logout" class="btn btn-home ms-2">
            <i class="bi bi-box-arrow-right me-2"></i>
            Đăng xuất
        </a>
    </div>
</body>
</html>
