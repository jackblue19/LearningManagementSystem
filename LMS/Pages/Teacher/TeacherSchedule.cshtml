@page
@model LMS.Pages.Teacher.TeacherScheduleModel
@{
    ViewData["Title"] = "Quản lý lịch dạy";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-1"><i class="bi bi-calendar3 me-2"></i>Lịch dạy của tôi</h2>
            <p class="text-muted mb-0">Quản lý buổi học cho các lớp bạn phụ trách.</p>
        </div>
        <a asp-page="TeacherDashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại Dashboard
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.TeacherClasses.Any())
    {
        <div class="alert alert-info">
            Bạn chưa có lớp nào. Tạo lớp mới để bắt đầu lên lịch.
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Tạo lớp mới</h5>
            </div>
            <div class="card-body">
                @if (!Model.Subjects.Any() || !Model.Centers.Any())
                {
                    <div class="alert alert-warning">
                        Không tìm thấy trung tâm hoặc môn học khả dụng. Vui lòng liên hệ quản lý.
                    </div>
                }
                else
                {
                    <form method="post" asp-page-handler="CreateClass" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-12">
                            <label asp-for="NewClass.ClassName" class="form-label">Tên lớp</label>
                            <input asp-for="NewClass.ClassName" class="form-control" />
                            <span asp-validation-for="NewClass.ClassName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NewClass.SubjectId" class="form-label">Môn học</label>
                            <select asp-for="NewClass.SubjectId" class="form-select">
                                @foreach (var subject in Model.Subjects)
                                {
                                    <option value="@subject.SubjectId">@subject.SubjectName</option>
                                }
                            </select>
                            <span asp-validation-for="NewClass.SubjectId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NewClass.CenterId" class="form-label">Trung tâm</label>
                            <select asp-for="NewClass.CenterId" class="form-select">
                                @foreach (var center in Model.Centers)
                                {
                                    <option value="@center.CenterId">@center.CenterName</option>
                                }
                            </select>
                            <span asp-validation-for="NewClass.CenterId" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="NewClass.ClassAddress" class="form-label">Địa điểm (tuỳ chọn)</label>
                            <input asp-for="NewClass.ClassAddress" class="form-control" />
                            <span asp-validation-for="NewClass.ClassAddress" class="text-danger"></span>
                        </div>
                        <div class="col-12 d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Tạo lớp mới
                            </button>
                        </div>
                    </form>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label class="form-label">Chọn lớp học</label>
                        <select class="form-select" name="classId" onchange="this.form.submit()">
                            @foreach (var cls in Model.TeacherClasses)
                            {
                                <option value="@cls.ClassId" selected="@(Model.SelectedClass?.ClassId == cls.ClassId)">
                                    @(cls.TeacherId == System.Guid.Empty
                                                                ? $"{cls.ClassName} ({cls.Subject?.SubjectName}) - Chưa có giáo viên"
                                                                : $"{cls.ClassName} ({cls.Subject?.SubjectName})")
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-12">
                        <span asp-validation-for="Input.ClassId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 text-md-end d-flex flex-column gap-2 align-items-md-end">
                        <small class="text-muted">Trung tâm: @Model.SelectedClass?.Center?.CenterName</small>
                        @if (!Model.ShowCreateClass)
                        {
                            <a asp-page="TeacherSchedule"
                               asp-route-classId="@Model.SelectedClass?.ClassId"
                               asp-route-showCreateClass="true"
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-plus-circle"></i> Tạo lớp mới
                            </a>
                        }
                        else
                        {
                            <a asp-page="TeacherSchedule"
                               asp-route-classId="@Model.SelectedClass?.ClassId"
                               class="btn btn-outline-secondary btn-sm">
                                Ẩn biểu mẫu tạo lớp
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-7">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Các buổi học đã lên lịch</h5>
                        <span class="badge bg-primary">@Model.Schedules.Count buổi</span>
                    </div>
                    <div class="card-body">
                        @if (Model.Schedules.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead>
                                        <tr>
                                            <th>Ngày</th>
                                            <th>Thời gian</th>
                                            <th>Phòng</th>
                                            <th>Ghi chú</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var schedule in Model.Schedules)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@schedule.SessionDate.ToString("dd/MM/yyyy")</strong><br />
                                                    <small class="text-muted">@schedule.ScheduleLabel</small>
                                                </td>
                                                <td>
                                                    <div>@(schedule.StartTime?.ToString("HH:mm") ?? "--:--") -
                                                        @(schedule.EndTime?.ToString("HH:mm") ?? "--:--")</div>
                                                    <small class="text-muted">Slot @schedule.Slot?.SlotLabel</small>
                                                </td>
                                                <td>@schedule.RoomName</td>
                                                <td>@(string.IsNullOrWhiteSpace(schedule.ScheduleNote) ? "--" :
                                                                                            schedule.ScheduleNote)</td>
                                                <td class="text-end">
                                                    <a asp-page="TeacherAttendance" asp-route-scheduleId="@schedule.ScheduleId"
                                                        class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-clipboard-check"></i> Điểm danh
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-calendar-x display-4 text-muted"></i>
                                <p class="mt-3 text-muted">Chưa có buổi học nào.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">Thêm buổi học mới</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="Schedule">
                            <input type="hidden" asp-for="Input.ClassId" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="Input.SessionDate" class="form-label"></label>
                                <input asp-for="Input.SessionDate" class="form-control" type="date" />
                                <span asp-validation-for="Input.SessionDate" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.SlotId" class="form-label">Khung giờ</label>
                                    <select asp-for="Input.SlotId" class="form-select">
                                        <option value="">-- Chọn slot --</option>
                                        @foreach (var slot in Model.TimeSlots)
                                        {
                                            <option value="@slot.SlotId">
                                                @slot.SlotLabel (@slot.StartTime.ToString("HH:mm") -
                                                @slot.EndTime.ToString("HH:mm"))
                                            </option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.RoomId" class="form-label"></label>
                                    <select asp-for="Input.RoomId" class="form-select">
                                        <option value="">-- Chọn phòng --</option>
                                        @foreach (var room in Model.Rooms)
                                        {
                                            <option value="@room.RoomId">@room.RoomName (@room.Capacity chỗ)</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Input.RoomId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.StartTime" class="form-label"></label>
                                    <input asp-for="Input.StartTime" class="form-control" type="time" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.EndTime" class="form-label"></label>
                                    <input asp-for="Input.EndTime" class="form-control" type="time" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Label" class="form-label">Tiêu đề buổi học</label>
                                <input asp-for="Input.Label" class="form-control" maxlength="150" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Note" class="form-label">Ghi chú</label>
                                <textarea asp-for="Input.Note" class="form-control" rows="2" maxlength="150"></textarea>
                            </div>

                            @if (Model.Conflicts.Any())
                            {
                                <div class="alert alert-warning">
                                    <h6 class="alert-heading">Xung đột lịch</h6>
                                    <ul class="mb-0">
                                        @foreach (var conflict in Model.Conflicts)
                                        {
                                            <li>@conflict.Message</li>
                                        }
                                    </ul>
                                </div>
                            }

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Lưu lịch học
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                @if (Model.ShowCreateClass)
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">Tạo lớp mới</h5>
                        </div>
                        <div class="card-body">
                            @if (!Model.Subjects.Any() || !Model.Centers.Any())
                            {
                                <div class="alert alert-warning">
                                    Không tìm thấy trung tâm hoặc môn học khả dụng. Vui lòng liên hệ quản lý.
                                </div>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="CreateClass" class="row g-3">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="col-12">
                                        <label asp-for="NewClass.ClassName" class="form-label">Tên lớp</label>
                                        <input asp-for="NewClass.ClassName" class="form-control" />
                                        <span asp-validation-for="NewClass.ClassName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="NewClass.SubjectId" class="form-label">Môn học</label>
                                        <select asp-for="NewClass.SubjectId" class="form-select">
                                            @foreach (var subject in Model.Subjects)
                                            {
                                                <option value="@subject.SubjectId">@subject.SubjectName</option>
                                            }
                                        </select>
                                        <span asp-validation-for="NewClass.SubjectId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="NewClass.CenterId" class="form-label">Trung tâm</label>
                                        <select asp-for="NewClass.CenterId" class="form-select">
                                            @foreach (var center in Model.Centers)
                                            {
                                                <option value="@center.CenterId">@center.CenterName</option>
                                            }
                                        </select>
                                        <span asp-validation-for="NewClass.CenterId" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <label asp-for="NewClass.ClassAddress" class="form-label">Địa điểm (tuỳ chọn)</label>
                                        <input asp-for="NewClass.ClassAddress" class="form-control" />
                                        <span asp-validation-for="NewClass.ClassAddress" class="text-danger"></span>
                                    </div>
                                    <div class="col-12 d-grid">
                                        <button type="submit" class="btn btn-outline-primary">
                                            <i class="bi bi-plus-circle"></i> Tạo lớp mới
                                        </button>
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}