@page
@model LMS.Pages.Teacher.TeacherMaterialsModel
@{
    ViewData["Title"] = "Quản lý tài liệu";
}

<div class="container mt-4">
    <h2>Quản lý tài liệu dạy học</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Upload Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>Upload tài liệu mới</h5>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SelectedClassId" class="form-label">Lớp học <span class="text-danger">*</span></label>
                        <select asp-for="SelectedClassId" class="form-select" required>
                            <option value="">-- Chọn lớp --</option>
                            @foreach (var cls in Model.TeacherClasses)
                            {
                                <option value="@cls.ClassId">@cls.ClassName</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Title" class="form-label">Tiêu đề <span class="text-danger">*</span></label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaterialType" class="form-label">Loại tài liệu</label>
                        <select asp-for="MaterialType" class="form-select">
                            <option value="document">Tài liệu</option>
                            <option value="slide">Slide bài giảng</option>
                            <option value="exercise">Bài tập</option>
                            <option value="solution">Đáp án</option>
                            <option value="other">Khác</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="UploadFile" class="form-label">File <span class="text-danger">*</span></label>
                        <input asp-for="UploadFile" type="file" class="form-control" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Note" class="form-label">Ghi chú</label>
                    <textarea asp-for="Note" class="form-control" rows="2"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-upload"></i> Upload
                </button>
            </form>
        </div>
    </div>

    <!-- Materials List -->
    <div class="card">
        <div class="card-header">
            <h5>Danh sách tài liệu</h5>
        </div>
        <div class="card-body">
            @if (Model.Materials.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Lớp học</th>
                                <th>Loại</th>
                                <th>Kích thước</th>
                                <th>Ngày upload</th>
                                <th>Người upload</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var material in Model.Materials)
                            {
                                <tr>
                                    <td>
                                        <a href="@material.FileUrl" target="_blank">
                                            <i class="bi bi-file-earmark"></i> @material.Title
                                        </a>
                                    </td>
                                    <td>@material.Class?.ClassName</td>
                                    <td>
                                        <span class="badge bg-info">@(material.MaterialType ?? "document")</span>
                                    </td>
                                    <td>@((material.FileSize ?? 0) / 1024) KB</td>
                                    <td>@material.UploadedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@material.UploadedByUser?.FullName</td>
                                    <td>
                                        <a href="@material.FileUrl" class="btn btn-sm btn-outline-primary" target="_blank">
                                            <i class="bi bi-download"></i>
                                        </a>
                                        <form method="post" asp-page-handler="Delete" style="display:inline;">
                                            <input type="hidden" name="materialId" value="@material.MaterialId" />
                                            <input type="hidden" asp-for="SelectedClassId" value="@material.ClassId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    onclick="return confirm('Bạn có chắc muốn xóa tài liệu này?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Chưa có tài liệu nào.</p>
            }
        </div>
    </div>
</div>
