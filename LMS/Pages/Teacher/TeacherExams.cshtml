@page
@model LMS.Pages.Teacher.TeacherExamsModel
@{
    ViewData["Title"] = "Quản lý kỳ thi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-1"><i class="bi bi-journal-check me-2"></i>Kỳ thi của tôi</h2>
            <p class="text-muted mb-0">Tạo, điều chỉnh và công bố kỳ thi cho lớp của bạn.</p>
        </div>
        <a asp-page="TeacherDashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại Dashboard
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.TeacherClasses.Any())
    {
        <div class="alert alert-info">
            Bạn chưa được phân công lớp nào. Vui lòng liên hệ quản lý trung tâm để được hỗ trợ.
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label class="form-label">Chọn lớp học</label>
                        <select class="form-select" name="classId" onchange="this.form.submit()">
                            @foreach (var cls in Model.TeacherClasses)
                            {
                                <option value="@cls.ClassId" selected="@(Model.SelectedClass?.ClassId == cls.ClassId)">@cls.ClassName (@cls.Subject?.SubjectName)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small class="text-muted">Trung tâm: @Model.SelectedClass?.Center?.CenterName</small>
                    </div>
                </form>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-7">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Danh sách kỳ thi</h5>
                        <span class="badge bg-primary">@Model.Exams.Count kỳ thi</span>
                    </div>
                    <div class="card-body">
                        @if (Model.Exams.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead>
                                        <tr>
                                            <th>Tiêu đề</th>
                                            <th>Ngày thi</th>
                                            <th>Điểm tối đa</th>
                                            <th>Trạng thái</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var exam in Model.Exams)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@exam.Title</strong><br />
                                                    <small class="text-muted">@exam.ExamType</small>
                                                </td>
                                                <td>@(exam.ExamDate?.ToString("dd/MM/yyyy") ?? "Chưa đặt")</td>
                                                <td>@(exam.MaxScore?.ToString("0.##") ?? "--")</td>
                                                <td>
                                                    <span class="badge @(exam.ExamStatus == "Published" ? "bg-success" : "bg-secondary")">
                                                        @(exam.ExamStatus ?? "Draft")
                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <a asp-page="TeacherExams" asp-route-classId="@exam.ClassId" asp-route-examId="@exam.ExamId" class="btn btn-sm btn-outline-primary me-1">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>
                                                    @if (!string.Equals(exam.ExamStatus, "Published", StringComparison.OrdinalIgnoreCase))
                                                    {
                                                        <form method="post" asp-page-handler="Publish" class="d-inline">
                                                            <input type="hidden" name="examId" value="@exam.ExamId" />
                                                            <button type="submit" class="btn btn-sm btn-outline-success me-1" title="Công bố kỳ thi">
                                                                <i class="bi bi-megaphone"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    <a asp-page="TeacherExamResults" asp-route-examId="@exam.ExamId" class="btn btn-sm btn-outline-info me-1">
                                                        <i class="bi bi-bar-chart"></i>
                                                    </a>
                                                    <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa kỳ thi này?');">
                                                        <input type="hidden" name="examId" value="@exam.ExamId" />
                                                        <input type="hidden" name="classId" value="@exam.ClassId" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-card-checklist display-4 text-muted"></i>
                                <p class="mt-3 text-muted">Chưa có kỳ thi nào cho lớp này.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@(Model.IsEditing ? "Cập nhật kỳ thi" : "Tạo kỳ thi mới")</h5>
                        @if (Model.IsEditing)
                        {
                            <a asp-page="TeacherExams" asp-route-classId="@Model.Input.ClassId" class="btn btn-sm btn-outline-secondary">Hủy</a>
                        }
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="Save">
                            <input type="hidden" asp-for="Input.ExamId" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="Input.ClassId" class="form-label">Lớp học</label>
                                <select asp-for="Input.ClassId" class="form-select">
                                    @foreach (var cls in Model.TeacherClasses)
                                    {
                                        <option value="@cls.ClassId">@cls.ClassName</option>
                                    }
                                </select>
                                <span asp-validation-for="Input.ClassId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Title" class="form-label">Tiêu đề</label>
                                <input asp-for="Input.Title" class="form-control" />
                                <span asp-validation-for="Input.Title" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.ExamType" class="form-label">Loại kỳ thi</label>
                                <input asp-for="Input.ExamType" class="form-control" />
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.ExamDate" class="form-label">Ngày thi</label>
                                    <input asp-for="Input.ExamDate" class="form-control" type="date" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.DurationMin" class="form-label">Thời lượng (phút)</label>
                                    <input asp-for="Input.DurationMin" class="form-control" type="number" min="0" step="5" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.MaxScore" class="form-label">Điểm tối đa</label>
                                <input asp-for="Input.MaxScore" class="form-control" type="number" min="0" step="0.5" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Description" class="form-label">Mô tả</label>
                                <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save"></i> @(Model.IsEditing ? "Cập nhật" : "Tạo kỳ thi")
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
