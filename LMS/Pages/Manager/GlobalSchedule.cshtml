@page
@model LMS.Pages.Manager.GlobalScheduleModel
@{
    ViewData["Title"] = "Lịch toàn cục";
}

<style>
    .schedule-grid {
        display: grid;
        grid-template-columns: 140px repeat(7, 1fr);
        gap: 8px;
        margin-top: 1.5rem;
    }

    .time-col-header,
    .day-header {
        padding: 14px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 10px;
        text-align: center;
        font-weight: 700;
        font-size: 15px;
        box-shadow: 0 2px 6px rgba(102, 126, 234, 0.3);
    }

    .time-col {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 10px;
        padding: 12px 8px;
        text-align: center;
        border: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        justify-content: center;
        font-weight: 600;
        color: #444;
    }

    .slot-time {
        font-size: 11px;
        color: #666;
        margin-top: 4px;
        font-weight: normal;
    }

    .empty-cell {
        background: #fafafa;
        border: 2px dashed #e0e0e0;
        border-radius: 10px;
        min-height: 95px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #bbb;
        font-size: 20px;
        transition: all 0.2s;
    }

    .empty-cell:hover {
        background: #f5f5f5;
        border-color: #ccc;
    }

    .class-card {
        border: 2px solid #667eea;
        background: linear-gradient(135deg, #f7f0ff 0%, #e9e4ff 100%);
        border-radius: 10px;
        padding: 10px;
        min-height: 95px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        transition: all 0.2s;
        box-shadow: 0 2px 4px rgba(102, 126, 234, 0.2);
    }

    .class-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        border-color: #764ba2;
    }

    .class-title {
        font-weight: 700;
        color: #5a3db5;
        font-size: 13px;
        margin-bottom: 6px;
        line-height: 1.3;
    }

    .class-info {
        font-size: 11px;
        color: #555;
        margin: 2px 0;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .class-info i {
        color: #667eea;
    }

    .schedule-footer {
        margin-top: 20px;
        padding: 15px;
        background: linear-gradient(135deg, #f7f0ff 0%, #e9e4ff 100%);
        border-radius: 10px;
        font-weight: 600;
        color: #5a3db5;
        text-align: center;
        font-size: 16px;
    }

    .filter-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        margin-bottom: 1.5rem;
    }

    .page-header-schedule {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }
</style>

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="page-header-schedule">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-2"><i class="bi bi-calendar-week-fill"></i> Lịch toàn cục</h2>
                <p class="mb-0 opacity-90">Xem tổng quan lịch học của tất cả lớp và phòng học</p>
            </div>
            <a asp-page="/Manager/ManageClasses" class="btn btn-light btn-lg">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="filter-card">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-calendar-range"></i> Từ ngày
                    </label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-calendar-check"></i> Đến ngày
                    </label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-journal-bookmark"></i> Lớp học
                    </label>
                    <select asp-for="ClassId" class="form-select">
                        <option value="">-- Tất cả lớp học --</option>
                        @foreach (var cls in Model.AvailableClasses)
                        {
                            <option value="@cls.ClassId">@cls.ClassName</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-door-closed"></i> Phòng học
                    </label>
                    <select asp-for="RoomId" class="form-select">
                        <option value="">-- Tất cả phòng --</option>
                        @foreach (var room in Model.AvailableRooms)
                        {
                            <option value="@room.RoomId">@room.RoomName</option>
                        }
                    </select>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-search"></i> Xem lịch
                    </button>
                    <a asp-page="/Manager/GlobalSchedule" class="btn btn-outline-secondary btn-lg ms-2">
                        <i class="bi bi-arrow-clockwise"></i> Đặt lại
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Date Range Info -->
    @if (Model.StartDate.HasValue && Model.EndDate.HasValue)
    {
        <div class="alert alert-info d-flex align-items-center mb-3">
            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
            <div>
                <strong>Hiển thị lịch từ:</strong> 
                @Model.StartDate.Value.ToString("dd/MM/yyyy") 
                đến 
                @Model.EndDate.Value.ToString("dd/MM/yyyy")
            </div>
        </div>
    }

    <!-- Week Grid -->
    <div class="schedule-grid">
        <!-- Header Row -->
        <div class="time-col-header">
            <i class="bi bi-clock-fill"></i> Giờ học
        </div>
        @foreach (var day in Model.DaysOfWeek)
        {
            <div class="day-header">@day</div>
        }

        <!-- Time Slots (6 slots) -->
        @for (byte slot = 1; slot <= 6; slot++)
        {
            <!-- Slot Label -->
            <div class="time-col">
                <div>Slot @slot</div>
                <div class="slot-time">@Model.GetSlotTime(slot)</div>
            </div>

            <!-- 7 Day Columns -->
            @for (int weekday = 1; weekday <= 7; weekday++)
            {
                var item = Model.GetClassForSlot(weekday, slot);

                @if (item != null)
                {
                    <a asp-page="/Manager/SlotDetails" 
                       asp-route-weekday="@weekday" 
                       asp-route-slotId="@slot" 
                       asp-route-sessionDate="@item.SessionDate.ToString("yyyy-MM-dd")"
                       class="class-card" style="text-decoration: none;">
                        <div class="class-title text-center mb-3">
                            <i class="bi bi-building"></i> Phòng còn trống
                        </div>
                        <div class="text-center">
                            <h3 class="mb-0" style="color: @(item.AvailableRoomsCount > 0 ? "#28a745" : "#dc3545"); font-weight: 800;">
                                @item.AvailableRoomsCount / @item.TotalRoomsCount
                            </h3>
                            <small class="text-muted">rooms</small>
                        </div>
                    </a>
                }
                else
                {
                    <div class="empty-cell">
                        <i class="bi bi-dash-lg"></i>
                    </div>
                }
            }
        }
    </div>

    <!-- Footer -->
    <div class="schedule-footer">
        <i class="bi bi-calendar-check-fill"></i>
        Tổng số: <strong>@Model.TotalSessions</strong> buổi học trong khoảng thời gian được chọn
    </div>
</div>
