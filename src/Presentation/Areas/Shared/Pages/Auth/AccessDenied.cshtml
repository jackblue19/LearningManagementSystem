@page
@model Presentation.Areas.Shared.Pages.Auth.AccessDeniedModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Access denied";
    ViewData["LayoutVariant"] = "standalone";
}

<section class="mx-auto w-full max-w-3xl rounded-3xl bg-white/80 p-10 shadow-2xl ring-1 ring-slate-200 backdrop-blur">
    <div class="flex flex-col items-center text-center">
        <span class="flex h-16 w-16 items-center justify-center rounded-full bg-rose-100 text-rose-600">
            <svg class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                <path d="M12 9v4" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M12 17.25h.01" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M12 3.75a8.25 8.25 0 1 1-8.25 8.25A8.25 8.25 0 0 1 12 3.75Z" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
        </span>
        <h1 class="mt-6 text-3xl font-semibold text-slate-900">You do not have access</h1>
        <p class="mt-3 text-base leading-relaxed text-slate-600">Your role does not grant permission to view this resource. If you believe this is an error, contact your administrator or switch to an approved workspace.</p>
    </div>

    <div class="mt-10 grid gap-4 sm:grid-cols-2">
        <a asp-area="Shared" asp-page="/Auth/Login" class="inline-flex items-center justify-center gap-2 rounded-xl border border-slate-200 px-4 py-3 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600">
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                <path d="m10 7-5 5 5 5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M5 12h14" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            <span>Back to sign in</span>
        </a>
        <a asp-area="Admin" asp-page="/Dashboard" class="inline-flex items-center justify-center gap-2 rounded-xl bg-brand-600 px-4 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-brand-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600">
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                <path d="M5 12h14" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="m12 5 7 7-7 7" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            <span>Go to dashboard</span>
        </a>
    </div>

    <div class="mt-12 rounded-2xl border border-slate-200 bg-slate-50/70 p-6 text-left text-sm text-slate-600">
        <h2 class="text-base font-semibold text-slate-900">Need elevated permissions?</h2>
        <p class="mt-2 leading-relaxed">Submit a brief request outlining the resource you need and why. A member of the operations team will review and upgrade your access profile.</p>
        <button type="button" class="mt-4 inline-flex items-center gap-2 rounded-lg border border-slate-200 px-4 py-2 text-xs font-semibold uppercase tracking-wide text-slate-700 transition hover:border-brand-300 hover:text-brand-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600">
            <svg class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                <path d="M12 5.25v13.5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M5.25 12h13.5" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            <span>Request higher access</span>
        </button>
    </div>
</section>
