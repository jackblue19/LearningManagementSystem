@page
@model Presentation.Areas.Teachers.Pages.ManageClassModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage classes";
}

<div class="space-y-10">
    <header class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
        <div class="space-y-2">
            <p class="text-xs font-semibold uppercase tracking-wide text-brand-600">Teacher workspace</p>
            <h1 class="text-3xl font-semibold text-slate-900">Manage classes</h1>
            <p class="max-w-2xl text-sm text-slate-600">Track attendance, respond to enrolment requests, and plan upcoming sessions-all from a single teaching hub.</p>
        </div>
        <div class="flex flex-wrap items-center gap-3">
            <a asp-area="Teachers" asp-page="/RegisterClass" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-brand-300 hover:text-brand-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600">
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                    <path d="M12 12a4 4 0 1 0-4-4 4 4 0 0 0 4 4Zm-7 8a7 7 0 0 1 14 0" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
                <span>Register learner</span>
            </a>
            <a asp-area="Teachers" asp-page="/CreateClass" class="inline-flex items-center gap-2 rounded-lg bg-brand-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-brand-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600">
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                    <path d="M12 4v16M4 12h16" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
                <span>Create class</span>
            </a>
            <a asp-area="Teachers" asp-page="/Schedule" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-brand-300 hover:text-brand-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600">
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                    <path d="M8 7V4m8 3V4M4 9h16M5 9v9a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V9" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
                <span>Plan schedule</span>
            </a>
        </div>
    </header>

    <section class="grid gap-4 sm:grid-cols-2 xl:grid-cols-4">
        <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Active classes</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.TotalClasses</p>
            <p class="mt-1 text-xs text-slate-500">@Model.ActiveClasses classes currently in motion</p>
        </article>
        <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Learners engaged</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.LearnersEnrolled</p>
            <p class="mt-1 text-xs text-slate-500">Average attendance @Model.AverageAttendance.ToString("0.0")%</p>
        </article>
        <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Capacity utilisation</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.CapacityUtilisation.ToString("0.0")%</p>
            <p class="mt-1 text-xs text-slate-500">@Model.WaitlistedHeadcount learners waitlisted</p>
        </article>
        <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">This week</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.SessionsThisWeek sessions</p>
            <p class="mt-1 text-xs text-slate-500">Next: @(Model.NextSession?.Start.ToString("MMM d - h:mm tt") ?? "TBD")</p>
        </article>
    </section>

    <section class="grid gap-6 xl:grid-cols-3">
        <div class="space-y-6 xl:col-span-2">
            <div class="rounded-3xl border border-slate-200 bg-white shadow-sm">
                <div class="flex flex-col gap-4 border-b border-slate-100 px-6 py-4 sm:flex-row sm:items-center sm:justify-between">
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900">Class portfolio</h2>
                        <p class="text-sm text-slate-500">Snapshot of your sections with real-time status and roster health.</p>
                    </div>
                    <div class="flex items-center gap-2">
                        <input type="search" placeholder="Search class" class="w-48 rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-brand-400 focus:outline-none focus:ring-2 focus:ring-brand-100" />
                        <a asp-area="Teachers" asp-page="/RegisterClass" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm font-semibold text-slate-700 transition hover:border-brand-300 hover:text-brand-700">
                            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                                <path d="M12 4v16M4 12h16" stroke-linecap="round" stroke-linejoin="round"></path>
                            </svg>
                            <span>Add learner</span>
                        </a>
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-slate-100 text-left text-sm">
                        <thead class="bg-slate-50 text-xs font-semibold uppercase tracking-wide text-slate-500">
                            <tr>
                                <th class="px-6 py-3">Class</th>
                                <th class="px-6 py-3">Instructor</th>
                                <th class="px-6 py-3">Room</th>
                                <th class="px-6 py-3">Roster</th>
                                <th class="px-6 py-3">Attendance</th>
                                <th class="px-6 py-3">Next session</th>
                                <th class="px-6 py-3 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100 text-slate-700">
                            @foreach (var item in Model.Classes)
                            {
                                <tr class="transition hover:bg-slate-50/70">
                                    <td class="px-6 py-4">
                                        <div class="font-semibold text-slate-900">@item.Name</div>
                                        <div class="text-xs text-slate-500">@item.Code â€¢ @item.Subject</div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm font-medium text-slate-800">@item.Instructor</div>
                                        <div class="text-xs text-slate-500">Updated @item.LastUpdated.ToString("MMM d 'at' h:mm tt")</div>
                                    </td>
                                    <td class="px-6 py-4">@item.Room</td>
                                    <td class="px-6 py-4">
                                        <span class="font-semibold text-slate-900">@item.Enrollment</span>
                                        <span class="text-xs text-slate-500">/ @item.Capacity</span>
                                    </td>
                                    <td class="px-6 py-4">@item.AttendanceRate.ToString("0.0")%</td>
                                    <td class="px-6 py-4">
                                        <div>@item.NextSession.ToString("MMM d, h:mm tt")</div>
                                        <span class="mt-1 inline-flex items-center rounded-full px-2.5 py-1 text-xs font-medium @item.StatusBadge">@item.StatusLabel</span>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="inline-flex items-center gap-2">
                                            <a href="#attendance" class="text-sm font-semibold text-brand-600 hover:text-brand-700">Mark attendance</a>
                                            <a asp-area="Teachers" asp-page="/Schedule" class="text-sm text-slate-500 hover:text-slate-700">Schedule</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="rounded-3xl border border-slate-200 bg-white shadow-sm">
                <div class="flex items-center justify-between border-b border-slate-100 px-6 py-4">
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900">Upcoming schedule</h2>
                        <p class="text-sm text-slate-500">Plan around rooms and delivery modes for the week ahead.</p>
                    </div>
                    <a asp-area="Teachers" asp-page="/Schedule" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700 transition hover:border-brand-300 hover:text-brand-700">
                        Manage schedule
                    </a>
                </div>
                <div class="space-y-4 px-6 py-4">
                    @foreach (var session in Model.UpcomingSessions.OrderBy(s => s.Start))
                    {
                        <article class="flex flex-col gap-3 rounded-2xl border border-slate-100 bg-slate-50 p-4 transition hover:border-brand-200 hover:bg-white sm:flex-row sm:items-center sm:justify-between">
                            <div class="flex items-start gap-4">
                                <div class="flex h-12 w-12 flex-col items-center justify-center rounded-xl bg-white text-sm font-semibold text-brand-600 shadow-sm">
                                    <span>@session.Start.ToString("dd")</span>
                                    <span class="text-xs uppercase tracking-wide text-slate-500">@session.Start.ToString("MMM")</span>
                                </div>
                                <div>
                                    <p class="text-sm font-semibold text-slate-900">@session.ClassName</p>
                                    <p class="text-xs text-slate-500">@session.Focus</p>
                                    <div class="mt-2 flex flex-wrap items-center gap-2 text-xs text-slate-500">
                                        <span class="font-semibold text-slate-700">@session.Start.ToString("h:mm tt") - @session.End.ToString("h:mm tt")</span>
                                        <span>-</span>
                                        <span>@session.Room</span>
                                    </div>
                                </div>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="inline-flex rounded-full px-2.5 py-1 text-xs font-semibold @session.DeliveryStyles">@session.DeliveryBadge</span>
                                <a asp-area="Teachers" asp-page="/Schedule" class="text-xs font-semibold text-brand-600 hover:text-brand-700">Edit</a>
                            </div>
                        </article>
                    }
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <div class="rounded-3xl border border-slate-200 bg-white shadow-sm">
                <div class="flex items-center justify-between border-b border-slate-100 px-6 py-4">
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900">Registration queue</h2>
                        <p class="text-sm text-slate-500">@Model.PendingRegistrations pending approvals, @Model.WaitlistedHeadcount waitlisted.</p>
                    </div>
                    <a asp-area="Teachers" asp-page="/RegisterClass" class="text-xs font-semibold text-brand-600 hover:text-brand-700">Open queue</a>
                </div>
                <ul class="divide-y divide-slate-100">
                    @foreach (var registration in Model.RegistrationQueue.OrderByDescending(r => r.RequestedOn))
                    {
                        <li class="px-6 py-4">
                            <div class="flex items-start justify-between gap-3">
                                <div>
                                    <p class="text-sm font-semibold text-slate-900">@registration.Student</p>
                                    <p class="text-xs text-slate-500">@registration.ClassName</p>
                                    <p class="mt-1 text-xs text-slate-400">Requested @registration.RequestedOn.ToString("MMM d, h:mm tt")</p>
                                </div>
                                <span class="rounded-full px-2.5 py-1 text-xs font-semibold @registration.StatusBadge">@registration.Status</span>
                            </div>
                        </li>
                    }
                </ul>
            </div>

            <div id="attendance" class="scroll-mt-24">
                <component type="typeof(Presentation.Components.Teacher.ClassAttendance)" render-mode="ServerPrerendered" />
            </div>
        </div>
    </section>
</div>