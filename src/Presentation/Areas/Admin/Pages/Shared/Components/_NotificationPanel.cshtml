@model IEnumerable<Presentation.ViewModels.Admin.NotificationViewModel>

<section class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
    <div class="flex items-center justify-between">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Recent notifications</h3>
        <a href="#" class="text-xs font-medium text-brand-600 hover:text-brand-700">All messages</a>
    </div>
    <ul class="mt-4 space-y-3">
        @foreach (var item in Model)
        {
            <li class="rounded-xl border border-slate-100 px-4 py-3">
                <div class="flex items-start justify-between gap-3">
                    <div>
                        <p class="text-sm font-semibold text-slate-900">@item.Title</p>
                        <p class="mt-1 text-xs text-slate-500">@item.Audience â€¢ @item.SentAt</p>
                    </div>
                    <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-700">@item.State</span>
                </div>
            </li>
        }
    </ul>
</section>