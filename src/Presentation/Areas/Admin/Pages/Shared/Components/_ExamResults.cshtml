@model IEnumerable<Presentation.ViewModels.Admin.ExamResultSummaryViewModel>

<section class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
    <div class="flex items-center justify-between">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Exam performance</h3>
        <a href="#" class="text-xs font-medium text-brand-600 hover:text-brand-700">Insights</a>
    </div>
    <ul class="mt-4 space-y-3">
        @foreach (var result in Model)
        {
            <li class="rounded-xl border border-slate-100 px-4 py-3">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-semibold text-slate-900">@result.Exam</p>
                        <p class="text-xs text-slate-500">@result.Cohort</p>
                    </div>
                    <span class="text-sm font-semibold text-slate-900">@result.AverageScore.ToString("0.0")% avg</span>
                </div>
                <p class="mt-2 text-xs text-slate-500">Pass rate @result.PassRate.ToString("0.0")%</p>
            </li>
        }
    </ul>
</section>
