@page
@model Presentation.Areas.Admin.Pages.Subjects.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Subjects";
}

<div class="space-y-10">
    <header class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-3xl font-semibold text-slate-900">Subjects</h1>
            <p class="mt-2 text-sm text-slate-600">Coordinate curriculum coverage, module ownership, and content freshness.</p>
        </div>
        <div class="flex flex-wrap items-center gap-3">
            <button type="button" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600">Import syllabus</button>
            <button type="button" class="inline-flex items-center gap-2 rounded-lg bg-brand-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-brand-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600">
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                    <path d="M12 5.25v13.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    <path d="M5.25 12h13.5" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
                <span>New subject</span>
            </button>
        </div>
    </header>

    <section class="grid gap-4 sm:grid-cols-2 xl:grid-cols-4">
        <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Catalog</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Subjects.Count</p>
            <p class="mt-1 text-xs text-slate-500">active learning paths</p>
        </article>
        <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Modules</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.TotalModules</p>
            <p class="mt-1 text-xs text-slate-500">across all subjects</p>
        </article>
        <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Updated this month</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.RecentlyUpdated</p>
            <p class="mt-1 text-xs text-slate-500">content refreshes</p>
        </article>
        <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Ownership</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.UniqueOwners</p>
            <p class="mt-1 text-xs text-slate-500">subject leads</p>
        </article>
    </section>

    <section class="rounded-3xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-100 px-6 py-4">
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <h2 class="text-lg font-semibold text-slate-900">Subject catalog</h2>
                    <p class="text-sm text-slate-500">Curriculum inventory with module depth and ownership.</p>
                </div>
                <div class="flex items-center gap-2">
                    <input type="search" placeholder="Search subject" class="w-48 rounded-lg border border-slate-200 px-3 py-2 text-sm focus:border-brand-400 focus:outline-none focus:ring-2 focus:ring-brand-100" />
                    <button type="button" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900">
                        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                            <path d="M6 9h12M6 12h12M6 15h12" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        <span>Filters</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-100 text-left text-sm">
                <thead class="bg-slate-50 text-xs font-semibold uppercase text-slate-500">
                    <tr>
                        <th class="px-6 py-3">Subject</th>
                        <th class="px-6 py-3">Modules</th>
                        <th class="px-6 py-3">Owner</th>
                        <th class="px-6 py-3">Last updated</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 text-slate-700">
                    @foreach (var subject in Model.Subjects)
                    {
                        <tr>
                            <td class="px-6 py-4">
                                <div class="font-semibold text-slate-900">@subject.Name</div>
                                <div class="text-xs text-slate-500">@subject.Code</div>
                            </td>
                            <td class="px-6 py-4">@subject.ModuleCount</td>
                            <td class="px-6 py-4">@subject.Owner</td>
                            <td class="px-6 py-4">@subject.LastUpdated</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <section class="grid gap-6 xl:grid-cols-3">
        <div class="space-y-6 xl:col-span-2">
            @await Html.PartialAsync("Shared/Components/_ClassMaterials", Model.Materials)
            @await Html.PartialAsync("Shared/Components/_AttendanceSnapshot", Model.Attendance)
        </div>
        <div class="space-y-6">
            @await Html.PartialAsync("Shared/Components/_NotificationPanel", Model.Notifications)
            @await Html.PartialAsync("Shared/Components/_TeacherAvailability", Model.Teachers)
        </div>
    </section>
</div>
